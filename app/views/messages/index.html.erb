<div class="row">
  <h2>Inbox</h2>
  <h4>
    This is a Ruby on Rails web application that allows users list their inbox list emails grouped by 'from'.
  </h4>

  <%= link_to "Connect to Gmail Inbox", google_oauth_path, class: 'btn btn-info', id: 'show-more' unless session[:google_access_token] %>
</div>

<div>
  <div id='messages-list'>
    <%= render partial: 'messages' %>
  </div>

  <% if @next_page %>
    <div class="row mt-20">
      <%= link_to "Show more",root_path(next_page: @next_page), method: :get, remote: true, class: 'btn btn-primary btn-lg btn-block', id: 'show-more'
      %>
    </div>
  <% end %>
</div>

